<div class="row"> 

     <div class="col-md-4 col-md-offset-4 text-center"> 
   

  <h2>Inscription</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
    
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Adresse email" %>
    </div>

     <div class="form-group">
        <br />
      <%= f.text_field :fullname, autocomplete: "fullname",class: "form-control", placeholder: "Votre nom" %>
    </div>

    <div class="form-group">
        <br />
      <%= f.password_field :password, autocomplete: "new-password",class: "form-control", placeholder: "CrÃ©er un mot de passe" %>
    </div>
    

    <div class="actions">
      <%= f.submit "Inscription", class: "btn btn-primary" %>
    </div>
  <% end %>

  </div>
</div>